(executables
 (names     version ls exec bind robust ps no_image)
 (libraries docker-api str))

(alias
 (name tests)
 (deps version.exe ls.exe exec.exe bind.exe robust.exe ps.exe no_image.exe))

(alias
 (name    runtest)
 (deps    version.exe)
 (action  (run %{deps})))

(alias
 (name    runtest)
 (deps    ls.exe)
 (action  (progn
           (run %{deps})
           (run %{deps} --logs))))

(alias
 (name    runtest)
 (deps    exec.exe)
 (action  (run %{deps})))

(alias
 (name    runtest)
 (deps    bind.exe)
 (action  (run %{deps})))

(alias
 (name    runtest)
 (deps    robust.exe)
 (action  (run %{deps})))

(alias
 (name    runtest)
 (deps    ps.exe)
 (action  (run %{deps})))

(alias
 (name    runtest)
 (deps    no_image.exe)
 (action  (run %{deps})))
